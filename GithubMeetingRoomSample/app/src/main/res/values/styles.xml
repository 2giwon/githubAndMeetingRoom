<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorVariableSelect</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/colorVariableSelect</item>
    </style>

    <style name="MeetingRoomHeading1">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextHeading1</item>
    </style>

    <style name="MeetingRoomHeadingAvailableCount">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:text">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorVariableSelect</item>
    </style>

    <style name="RadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:buttonTint">@color/colorVariableSelect</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MeetingRoomTitle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextHeading1</item>
    </style>


</resources>
